<% content_for :title, t('.title') %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h2 class="mb-0 h5"><%= t('.main_title') %></h2>
      </div>
      <div class="card-body">
        <%= form_with(model: @category, local: true) do |form| %>
          <% if @category.errors.any? %>
            <div class="alert alert-danger">
              <h5 class="alert-heading h6"><%= t('.form.errors_title', count: @category.errors.count) %></h5>
              <ul class="mb-0 small">
                <% @category.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :name, t('.form.name_label'), class: "form-label" %>
            <%= form.text_field :name, class: "form-control", placeholder: t('.form.name_placeholder'), autofocus: true, required: true %>
            <div class="form-text small">
              <i class="bi bi-info-circle"></i> <%= t('.form.name_hint') %>
            </div>
          </div>

          <div class="alert alert-info small">
            <i class="bi bi-film"></i>
            <strong><%= t('.form.associated_movies') %></strong> <%= @category.movies.count %>
          </div>

          <div class="d-flex gap-2">
            <%= form.submit t('.form.update_category_button'), class: "btn btn-primary" %>
            <%= link_to t('cancel'), categories_path, class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>