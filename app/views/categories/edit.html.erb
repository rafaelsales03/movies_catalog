<% content_for :title, "Editar Categoria" %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h2 class="mb-0">Editar Categoria</h2>
      </div>
      <div class="card-body">
        <%= form_with(model: @category, local: true) do |form| %>
          <% if @category.errors.any? %>
            <div class="alert alert-danger">
              <h5><%= pluralize(@category.errors.count, "erro") %> impedem o salvamento:</h5>
              <ul class="mb-0">
                <% @category.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :name, "Nome da Categoria", class: "form-label" %>
            <%= form.text_field :name, class: "form-control", placeholder: "Ex: Ação, Drama, Comédia", autofocus: true %>
            <div class="form-text">
              A categoria será automaticamente formatada com a primeira letra maiúscula.
            </div>
          </div>

          <div class="alert alert-info">
            <small>
              <strong>Filmes associados:</strong> <%= @category.movies.count %>
            </small>
          </div>

          <div class="d-flex gap-2">
            <%= form.submit "Atualizar Categoria", class: "btn btn-primary" %>
            <%= link_to "Cancelar", categories_path, class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>