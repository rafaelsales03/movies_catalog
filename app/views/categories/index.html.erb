<% content_for :title, "Categorias" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Categorias</h1>
  <%= link_to "Nova Categoria", new_category_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <div class="card-body">
    <% if @categories.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Filmes</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td>
                  <span class="badge bg-secondary"><%= category.movies.count %></span>
                </td>
                <td>
                  <%= link_to "Editar", edit_category_path(category), class: "btn btn-sm btn-outline-primary" %>
                  <%= button_to "Excluir", category_path(category), 
                      method: :delete, 
                      class: "btn btn-sm btn-outline-danger",
                      data: { 
                        turbo_confirm: "Tem certeza? Esta categoria será removida de todos os filmes associados." 
                      } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <%= paginate @categories %>
    <% else %>
      <div class="text-center py-5">
        <p class="text-muted">Nenhuma categoria cadastrada ainda.</p>
        <%= link_to "Criar primeira categoria", new_category_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Voltar para filmes", movies_path, class: "btn btn-secondary" %>
</div>