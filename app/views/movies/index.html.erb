<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Filmes</h1>
  <div>
    <% if user_signed_in? %>
      <%= link_to "Gerenciar Categorias", categories_path, class: "btn btn-outline-secondary me-2" %>
      <%= link_to "Novo Filme", new_movie_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">
            <%= link_to movie.title, movie_path(movie), class: "text-decoration-none" %>
          </h5>
          
          <% if movie.categories.any? %>
            <div class="mb-2">
              <% movie.categories.each do |category| %>
                <span class="badge bg-primary me-1"><%= category.name %></span>
              <% end %>
            </div>
          <% end %>
          
          <p class="card-text flex-grow-1"><%= truncate(movie.synopsis, length: 100) %></p>
          
          <div class="card-footer bg-transparent border-0 p-0 mt-auto">
            <small class="text-muted">
              <%= movie.year %>
              <% if movie.duration.present? %>
                • <%= movie.duration %> min
              <% end %>
              <% if movie.director.present? %>
                • <%= movie.director %>
              <% end %>
            </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @movies.empty? %>
  <div class="text-center py-5">
    <p class="text-muted">Nenhum filme cadastrado ainda.</p>
    <% if user_signed_in? %>
      <%= link_to "Cadastrar primeiro filme", new_movie_path, class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>

<%= paginate @movies %>