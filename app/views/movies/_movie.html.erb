<div id="<%= dom_id movie %>">
  <p>
    <strong><%= Movie.human_attribute_name(:title) %>:</strong>
    <%= movie.title %>
  </p>

  <p>
    <strong><%= Movie.human_attribute_name(:synopsis) %>:</strong>
    <%= movie.synopsis %>
  </p>

  <p>
    <strong><%= Movie.human_attribute_name(:year) %>:</strong>
    <%= movie.year %>
  </p>

  <p>
    <strong><%= Movie.human_attribute_name(:duration) %>:</strong>
    <%= movie.duration %>
  </p>

  <p>
    <strong><%= Movie.human_attribute_name(:director) %>:</strong>
    <%= movie.director %>
  </p>
</div>