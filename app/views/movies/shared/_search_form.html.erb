<div class="card mb-4 shadow-sm">
  <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center flex-wrap gap-2">
    <h5 class="mb-0"><i class="bi bi-search"></i> <%= t('movies.index.search_filters') %></h5>
    <button class="btn btn-sm btn-outline-light" type="button" data-bs-toggle="collapse" data-bs-target="#advancedFilters" aria-expanded="false" aria-controls="advancedFilters">
      <i class="bi bi-sliders"></i> <%= t('movies.index.advanced_filters') %>
    </button>
  </div>

  <div class="card-body">
    <%= form_with url: movies_path, method: :get, local: true, class: "needs-validation" do |f| %>

      <h6 class="text-muted mb-3"><i class="bi bi-search"></i> <%= t('movies.index.quick_search') %></h6>
      <div class="row g-3 mb-4">
        <div class="col-md-3">
          <%= f.label :title, t('movies.index.title_label'), class: "form-label" %>
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-film"></i></span>
            <%= f.text_field :title,
                 value: params[:title],
                 class: "form-control",
                 placeholder: t('movies.index.title_placeholder') %>
          </div>
        </div>

        <div class="col-md-3">
          <%= f.label :director, t('movies.index.director_label'), class: "form-label" %>
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-person"></i></span>
            <%= f.text_field :director,
                value: params[:director],
                class: "form-control",
                placeholder: t('movies.index.director_placeholder') %>
          </div>
        </div>

        <div class="col-md-2">
          <%= f.label :year, t('movies.index.year_label'), class: "form-label" %>
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-calendar"></i></span>
            <%= f.number_field :year,
                value: params[:year],
                class: "form-control",
                placeholder: t('movies.index.year_placeholder'),
                min: 1888,
                max: Date.current.year + 5 %>
          </div>
        </div>

        <div class="col-md-2">
          <%= f.label :category_id, t('movies.index.category_label'), class: "form-label" %>
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-tag"></i></span>
            <%= f.select :category_id,
                options_from_collection_for_select(categories, :id, :name, params[:category_id]),
                { include_blank: t('movies.index.category_all') },
                class: "form-select" %>
          </div>
        </div>

        <div class="col-md-2 d-flex align-items-end">
          <div class="btn-group w-100" role="group">
            <%= f.submit t('movies.index.search_button'), class: "btn btn-primary" %>
            <%= link_to t('movies.index.clear_button'), movies_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>

      <div class="collapse" id="advancedFilters">
        <hr>
        <h6 class="text-muted mb-3"><i class="bi bi-sliders"></i> <%= t('movies.index.advanced_filters') %></h6>

        <div class="row g-3 mb-3">
          <div class="col-12">
            <%= label_tag :filter_categories, t('movies.index.filter_categories_label'), class: "form-label" %>
            <div class="border rounded p-3 bg-light">
              <div class="row g-2">
                <% categories.each do |category| %>
                  <div class="col-md-3 col-sm-4 col-6">
                    <div class="form-check">
                      <%= check_box_tag 'filter_categories[]',
                          category.id,
                          params[:filter_categories]&.include?(category.id.to_s),
                          class: "form-check-input",
                          id: "filter_cat_#{category.id}" %>
                      <%= label_tag "filter_cat_#{category.id}", category.name, class: "form-check-label" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            <small class="form-text text-muted">
              <i class="bi bi-info-circle"></i>
              <%= t('movies.index.filter_categories_hint') %>
            </small>
          </div>
        </div>

        <div class="row g-3 mb-3">
          <div class="col-md-6">
            <%= f.label :year_from, t('movies.index.year_from_label'), class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-calendar-range"></i></span>
              <%= f.number_field :year_from,
                  value: params[:year_from],
                  class: "form-control",
                  placeholder: t('movies.index.year_from_placeholder'),
                  min: 1888,
                  max: Date.current.year + 5 %>
            </div>
          </div>

          <div class="col-md-6">
            <%= f.label :year_to, t('movies.index.year_to_label'), class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-calendar-range"></i></span>
              <%= f.number_field :year_to,
                  value: params[:year_to],
                  class: "form-control",
                  placeholder: t('movies.index.year_to_placeholder'),
                  min: 1888,
                  max: Date.current.year + 5 %>
            </div>
          </div>
        </div>

        <div class="row g-3 mb-3">
          <div class="col-12">
            <%= label_tag :filter_directors, t('movies.index.filter_directors_label'), class: "form-label" %>
            <div class="border rounded p-3 bg-light" style="max-height: 200px; overflow-y: auto;">
              <div class="row g-2">
                <% all_directors.each do |director| %>
                  <div class="col-md-3 col-sm-4 col-6">
                    <div class="form-check">
                      <%= check_box_tag 'filter_directors[]',
                          director,
                          params[:filter_directors]&.include?(director),
                          class: "form-check-input",
                          id: "filter_dir_#{director.parameterize}" %>
                      <%= label_tag "filter_dir_#{director.parameterize}", director, class: "form-check-label" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            <small class="form-text text-muted">
              <i class="bi bi-info-circle"></i>
              <%= t('movies.index.filter_directors_hint') %>
            </small>
          </div>
        </div>

        <div class="text-center mt-3">
          <%= f.submit t('movies.index.apply_advanced_filters'), class: "btn btn-success" %>
          <%= link_to t('movies.index.clear_all_filters'), movies_path, class: "btn btn-outline-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>