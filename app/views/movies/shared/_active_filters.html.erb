<% if active_filters.any? %>
  <div class="alert alert-info alert-dismissible fade show mb-3" role="alert">
    <strong><i class="bi bi-filter-circle-fill"></i> <%= t('movies.index.active_filters_title') %></strong>
    <ul class="mb-0 mt-2 list-unstyled">
      <% active_filters.each do |filter| %>
        <li><small><%= filter %></small></li>
      <% end %>
    </ul>
    <%= link_to t('movies.index.clear_all_filters_link'), movies_path, class: "btn btn-sm btn-outline-primary mt-2" %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="<%= t('helpers.bootstrap.close_label', default: 'Close') %>"></button>
  </div>
<% end %>