<% content_for :title, @movie.title %>

<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-primary text-white">
        <h1 class="mb-0"><%= @movie.title %></h1>
      </div>
      
      <div class="card-body">
        <% if @movie.categories.any? %>
          <div class="mb-3">
            <h6 class="text-muted mb-2">Categorias</h6>
            <div>
              <% @movie.categories.each do |category| %>
                <span class="badge bg-primary me-1 mb-1" style="font-size: 0.9rem; padding: 0.4em 0.8em;">
                  <%= category.name %>
                </span>
              <% end %>
            </div>
          </div>
          <hr>
        <% end %>

        <% if @movie.tags.any? %>
          <div class="mb-3">
            <h6 class="text-muted mb-2">
              <i class="bi bi-tags-fill"></i> Tags
            </h6>
            <div class="movie-tags">
              <% @movie.tags.ordered.each do |tag| %>
                <span class="movie-tag">
                  <i class="bi bi-tag-fill"></i>
                  <%= tag.name %>
                </span>
              <% end %>
            </div>
          </div>
          <hr>
        <% end %>

        <div class="mb-3">
          <h5>Sinopse</h5>
          <p class="text-muted"><%= @movie.synopsis %></p>
        </div>

        <div class="row">
          <% if @movie.year.present? %>
            <div class="col-md-4 mb-2">
              <strong>Ano:</strong>
              <p class="text-muted mb-0"><%= @movie.year %></p>
            </div>
          <% end %>

          <% if @movie.duration.present? %>
            <div class="col-md-4 mb-2">
              <strong>Duração:</strong>
              <p class="text-muted mb-0"><%= @movie.duration %> minutos</p>
            </div>
          <% end %>

          <% if @movie.director.present? %>
            <div class="col-md-4 mb-2">
              <strong>Diretor:</strong>
              <p class="text-muted mb-0"><%= @movie.director %></p>
            </div>
          <% end %>
        </div>
      </div>

      <% if user_signed_in? && @movie.user == current_user %>
        <div class="card-footer bg-transparent">
          <div class="d-flex gap-2">
            <%= link_to "Editar filme", edit_movie_path(@movie), class: "btn btn-outline-primary" %>
            <%= button_to "Deletar filme", 
                @movie, 
                method: :delete,
                class: "btn btn-outline-danger",
                data: { turbo_confirm: "Tem certeza que deseja excluir este filme?" } %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mb-4">
      <%= link_to "← Voltar para filmes", movies_path, class: "btn btn-secondary" %>
    </div>

    <div class="card shadow-sm">
      <div class="card-header bg-light">
        <h3 class="mb-0">Comentários</h3>
      </div>
      
      <div class="card-body">

      <% if @comment && @comment.errors.any? %>
          <div class="alert alert-danger">
            <p class="mb-2"><strong>Não foi possível enviar o comentário:</strong></p>
            <ul class="mb-0">
              <% @comment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with model: [@movie, Comment.new], local: true, class: "mb-4" do |f| %>
          <% if !user_signed_in? %>
            <div class="mb-3">
              <%= f.label :name, "Nome", class: "form-label" %>
              <%= f.text_field :name, class: "form-control", placeholder: "Seu nome", required: true %>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :content, "Comentário", class: "form-label" %>
            <%= f.text_area :content, class: "form-control", rows: 3, placeholder: "Escreva seu comentário...", required: true %>
          </div>

          <%= f.submit "Postar Comentário", class: "btn btn-primary" %>
        <% end %>

        <hr>

        <% if @movie.comments.any? %>
          <h5 class="mb-3">
            <%= pluralize(@movie.comments.count, "comentário", "comentários") %>
          </h5>
          
          <div class="list-group list-group-flush">
            <% @movie.comments.order(created_at: :desc).each do |comment| %>
              <div class="list-group-item">
                <div class="d-flex w-100 justify-content-between align-items-start">
                  <h6 class="mb-1">
                    <% if comment.user.present? %>
                      <%= comment.user.name.presence || "Usuário sem nome" %>
                      <span class="badge bg-secondary ms-1" style="font-size: 0.7rem;">Usuário registrado</span>
                    <% else %>
                      <%= comment.name %>
                    <% end %>
                  </h6>
                  <small class="text-muted">
                    <%= time_ago_in_words(comment.created_at) %> atrás
                  </small>
                </div>
                <p class="mb-0 mt-2"><%= comment.content %></p>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-4">
            <p class="text-muted mb-0">Seja o primeiro a comentar este filme!</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>