          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownLanguage">
            <li><%= link_to t('navbar.pt-BR'), url_for(locale: 'pt-BR'), class: "dropdown-item #{'active' if I18n.locale == :'pt-BR'}" %></li>
            <li><%= link_to t('navbar.en'), url_for(locale: 'en'), class: "dropdown-item #{'active' if I18n.locale == :en}" %></li>
